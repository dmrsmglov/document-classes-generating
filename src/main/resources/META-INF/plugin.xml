<idea-plugin>
    <id>ru.plugin.damir.documentation generating</id>
    <name>Document classes generator</name>
    <vendor email="damiron123.@gmail.com" url="http://www.yourcompany.com">Damirka</vendor>

    <description>
        Plugin generate pdf with class description
    </description>


    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action class="InitiateGeneratingAction" id="PdfGenerating.ToolsMenu"
                text="Generate class document">
            <add-to-group
                    group-id="ToolsMenu" anchor="last">
            </add-to-group>
            <keyboard-shortcut first-keystroke="control alt g" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>